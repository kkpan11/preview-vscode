{
    "name": "preview-vscode",
    "displayName": "Preview",
    "description": "A Markdown, ReStructured Text, HTML, Jade, Pug, Image, CSS, Mermaid previewer",
    "version": "2.1.0",
    "publisher": "searKing",
    "author": "Haixin Chen",
    "license": "MIT",
    "readme": "README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/searKing/preview-vscode"
    },
    "galleryBanner": {
        "color": "#78d6f0",
        "theme": "light"
    },
    "bugs": "https://github.com/searKing/preview-vscode/issues",
    "homepage": "https://github.com/searKing/preview-vscode/blob/master/README.md",
    "icon": "images/icon.png",
    "main": "./out/src/extension",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.preview",
        "onCommand:extension.previewToSide"
    ],
    "contributes": {
        "languages": [
            {
                "id": "mermaid",
                "aliases": [
                    "Mermaid",
                    "Mermaid Flowchart"
                ],
                "extensions": [
                    ".mmd",
                    ".mermaid"
                ]
            },
            {
                "id": "rst",
                "aliases": [
                    "RST",
                    "ReStructured Text"
                ],
                "extensions": [
                    ".rst",
                    ".rest",
                    ".hrst"
                ]
            },
            {
                "id": "jade",
                "aliases": [
                    "Pug",
                    "PUG Text",
                    "Jade"
                ],
                "extensions": [
                    ".pug",
                    ".jade"
                ]
            }
        ],
        "keybindings": [
            {
                "command": "extension.preview",
                "key": "ctrl+shift+v",
                "mac": "cmd+shift+v",
                "when": "!terminalFocus"
            },
            {
                "command": "extension.previewToSide",
                "key": "ctrl+k v",
                "mac": "cmd+k v",
                "when": "!terminalFocus"
            }
        ],
        "commands": [
            {
                "command": "extension.preview",
                "title": "Toggle Preview",
                "category": "Preview"
            },
            {
                "command": "extension.previewToSide",
                "title": "Open Preview to the Side",
                "category": "Preview"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "acorn": "^8.0.1",
        "file-url": "^3.0.0",
        "markdown-it-anchor": "^5.3.0",
        "markdown2html-less": "^1.0.3",
        "pug": "^3.0.0",
        "rst2mdown": "^0.1.0"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/lodash": "^4.14.149",
        "@types/mocha": "^7.0.1",
        "@types/node": "^13.7.4",
        "@types/vscode": "^1.34.0",
        "electron-rebuild": "^1.10.0",
        "glob": "^7.1.4",
        "jslint": "^0.12.1",
        "mermaid": "^8.4.7",
        "mocha": "^7.0.1",
        "source-map-support": "^0.5.12",
        "tslint": "^6.0.0",
        "typescript": "^3.8.2",
        "vscode": "^1.1.36",
        "vscode-test": "^1.3.0"
    }
}
